@model Sandbox.ShoppingCart.Models.Cart

@{
    var cartProduct = Model.Products;
    
}

@{
    ViewBag.Title = "Cart Overview";
}

<h2>Cart Overview</h2>

<div class="container">
    <div id="cartProducts" class="row">
        @foreach (var product in cartProduct)
        {
            <div class="item col-xs-4 col-lg-4">
                <div class="thumbnail">
                    <img class="group list-group-image" src="http://placehold.it/200x100/000/fff" alt="" />
                    <div class="caption">
                        <h4 class="group inner list-group-item-heading">@product.Name</h4>
                        <p class="group inner list-group-item-text">@product.Description</p>
                        <div class="row">
                            <div class="col-xs-12 col-md-6">
                                <p class="lead"> @Resources.Main.Price: $@product.Price </p>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-xs-12 col-md-6">
                                <p class="lead">
                                    Ordered:
                                    <nobr class="group inner list-group-item-text">@product.QuantityToOrder</nobr>
                                </p>
                            </div>
                        </div>
                        <div class="row">
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
</div>

