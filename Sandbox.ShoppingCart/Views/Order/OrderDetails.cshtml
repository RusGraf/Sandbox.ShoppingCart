@model Sandbox.ShoppingCart.Models.Order
@{
    ViewBag.Title = "OrderDetails";
}

<h2>OrderDetails</h2>
@{
    var cartProduct = Model.Cart.Products;
}

<div class="container">
    <h2>Cart Items</h2>
    <table class="table table-striped">
        <thead>
            <tr>
                <th>Name</th>
                <th>Description</th>
                <th>@Resources.Main.Price</th>
                <th>Qty to Order</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var product in cartProduct)
            {
                <tr>
                    <td>@product.Name</td>
                    <td>@product.Description</td>
                    <td>$@product.Price</td>
                    <td>@product.QuantityToOrder</td>
                </tr>
            }
        </tbody>
    </table>

    <div class="font-weight-bold">Total price: $@Model.Cart.TotalPrice</div>

    @Html.ActionLink(Resources.Main.Place_an_order, "GetCart", "Order")
</div>
